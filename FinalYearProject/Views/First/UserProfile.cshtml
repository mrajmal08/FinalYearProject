@model UserSystem
@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container emp-profile">
    <form method="post" action="/First/UserProfile" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    
                    <img src="@Model.UserImage" alt="" />
                    <div class="file btn btn-lg btn-primary">
                        Change Photo
                        <input type="file" name="file"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        @Model.UserFname  @Model.UserSname
                    </h5>
                  
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
          
        </div>
        <div class="row">
            <div class="col-md-4">
                
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                       <br /> 
                        <div class="row col-md-6">
                            <div>
                                <label>User Id</label>
                            </div>
                            <div>
                                <label>First Name</label>
                            </div>
                            <div>
                                <label>Second Name</label>
                            </div>
                            <div>
                                <label>Email</label>
                            </div>
                            <div>
                                <label>Phone</label>
                            </div>
                            <div>
                                <label>Date Of Birth</label>
                            </div>
                            <div>
                                <label>Gender</label>
                            </div>
                            <div>
                                <label>Nationality</label>
                            </div>

                        </div>
                              <div class="row col-md-6">

                                  <div>
                                      <p>@Model.Id</p>
                                  </div>
                                  <div>
                                      <input type="text" class="FirstName" id="FirstName" name="FistNamer" value="@Model.UserFname" />
                                      
                                  </div>
                                  <div>
                                      <input type="text" class="UserSname" id="UserSname" name="UserSname" value="@Model.UserSname" />

                                     
                                  </div>
                                  <div>
                                      <input type="text" class="UserEmail" id="UserEmail" name="UserEmail" value="@Model.UserEmail" />
                                      
                                  </div>
                                  <div>
                                      <input type="text" class="UserContact" id="UserContact" name="UserContact" value="@Model.UserContact" />

                                      
                                  </div>
                                  <div>
                                      <input type="text" class="UserDob" id="UserDob" name="UserDob" value="@Model.UserDob" />
                                     
                                  </div>
                                  <div>
                                      <input type="text" class="UserGender" id="UserGender" name="UserGender" value="@Model.UserGender" />
                                      
                                  </div>
                                  <div>
                                      <input type="text" class="UserCountry" id="UserCountry" name="UserCountry" value="@Model.UserCountry" />
                                      
                                  </div><br />
                                  <div>
                                      <button type="submit" class="btn btn-outline-success">Save Changes</button> </div>
                              </div>
                       
                            
                            
                      </div> 
                </div>
            </div>
        </div>
    </form>
</div>


