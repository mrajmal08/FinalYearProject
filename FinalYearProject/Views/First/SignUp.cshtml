@model FinalYearProject.Models.UserSystem

@{
    ViewData["Title"] = "SignUp";
}
<h2 class="alert alert-warning">Please Enter the details bellow</h2>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{

    <h2> @ViewBag.Message</h2>
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Your Name:</label>
                <input asp-for="UserFname" class="form-control" placeholder="Your Best Name"/>
                <span asp-validation-for="UserFname" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label>Your Email:</label>
                <input asp-for="UserEmail" class="form-control" placeholder="you@example.org" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input asp-for="UserPassword" class="form-control" type="password" placeholder="********" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label>Your Address:</label>
                <input asp-for="UserAddress" class="form-control"  placeholder="Sialkot"/>
                <span asp-validation-for="UserAddress" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label>Your Contact:</label>
                <input asp-for="UserContact" class="form-control" placeholder="123456789"/>
                <span asp-validation-for="UserContact" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-danger" />
                <a href="/First/Login" class="btn btn-warning">Sign In</a>
            </div>
        </form>
    </div>
</div>


