<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/First/HomePage">Home</a></li>
    <li class="breadcrumb-item"><a href="/First/Catagory">Catagory</a></li>
    <li class="breadcrumb-item active">Detail</li>
</ol>

<div class="wm-zoom-container alert alert-success container-fluid responc" style="clear:both">




    <div class=" col-md-5 alert alert-success col-sm-5 col-xs-5">

            @{
                string[] Images = @Model.ProductImage.Split(',');
            }
            <div class=" Frontimg text-center">

                <div id="pic-1">
                    <a>
                        <img src="@Images[0]" class="photo" title="@Model.ProductName" />
                        </a>
                </div>

            </div>

            <ul class="zoom-desc preview-thumbnail nav nav-tabs smallimg">

                @try
                {
                    @if (Images[0] != null)
                    {
                        <li class="active">
                            <a data-target="#pic-1" data-toggle="tab">
                                <img src="@Images[0]" alt='' title="@Model.ProductName"  />
                            </a>
                        </li>
                    }}
                catch (Exception e)
                { }

                @try
                {
                    @if (Images[1] != null)
                    {
                        <li class="active text-center">
                            <a data-target="#pic-1" data-toggle="tab">
                                <img src="@Images[1]" alt='' title="@Model.ProductName"/>
                            </a>
                        </li>
                    }}
                catch (Exception e)
                { }

                @try
                {
                    @if (Images[2] != null)
                    {
                        <li class="active">
                            <a data-target="#pic-1" data-toggle="tab">
                                <img src="@Images[2]" alt='' title="@Model.ProductName"/>
                            </a>
                        </li>
                    }}
                catch (Exception e)
                { }


                @try
                {
                    @if (Images[3] != null)
                    {
                        <li class="active">
                            <a data-target="#pic-1" data-toggle="tab">
                                <img src="@Images[3]" alt='' title="@Model.ProductName" />
                            </a>
                        </li>
                    }}
                catch (Exception e)
                { }


                @try
                {
                    @if (Images[4] != null)
                    {
                        <li>
                            <a data-target="#pic-1" data-toggle="tab">
                                <img src="@Images[4]" class="img img-responsive"/>
                            </a>
                        </li>
                    }
                }
                catch (Exception e)
                { }
            </ul>
        </div>


    @if (Model != null)
    {
        <div class="col-md-7 col-sm-7 col-xs-7 alert alert-success">
            <h3 class="product-title">@Model.ProductName</h3>
            <div>
                <span class="sr-only">Four out of Five Stars</span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span><br />
                <span class="label label-success">@Model.ProductViews</span>
                <span class="monospaced"> Write a Review</span><br /><br />
                <p class="product-description">@Model.ProductMetaDisc</p><br />
                <h4 class="price"><strong>Price: </strong><span class="border-bottom-0">@Model.ProductPrice</span></h4><br />
                <h4 class="Brand"><strong>Brand: </strong><span>@Model.ProductBrand</span></h4> <br />
               <div class="action">

                 <button class="btn btn-info btn-lg" type="button"><span class="glyphicon glyphicon-shopping-cart"> </span>Add to Cart</button>
                 <button class="btn btn-lg " type="button"><span class="glyphicon glyphicon-heart-empty"> </span>Add to Wishlist</button>
                                                                                               
               </div>
                
            </div>
        </div>}

</div>

